# Required environment variables for Vercel deployment

# Xata Database
XATA_API_KEY=your_xata_api_key_here
XATA_DATABASE_URL=your_xata_database_url_here

# Gmail Integration (optional - for email reply tracking)
GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token_here

# Gemini AI (for email generation)
GEMINI_API_KEY=your_gemini_api_key_here

# Replit Auth (if using Replit features)
REPLIT_TOKEN=your_replit_token_here

# SendGrid (for email sending)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# App Configuration
NODE_ENV=production
