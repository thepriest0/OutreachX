{
  "extends": "./tsconfig.json",
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["client/**/*", "node_modules", "build", "dist"],
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "outDir": "./dist/server",
    "rootDir": ".",
    "jsx": "preserve",
    "noEmit": false,
    "declaration": false,
    "sourceMap": true,
    "moduleResolution": "node"
  }
}